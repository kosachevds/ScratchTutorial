<Controls:MetroWindow x:Class="ScratchTutorial.Gui.Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScratchTutorial.Gui"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight">
    <DockPanel Height="500" Width="600" Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="btnOk" Width="60" Height="25" Margin="0,0,10,0" Content="Выбрать" IsEnabled="False" Click="Select"/>
            <Button x:Name="btnBack" Width="60" Height="25" Content="Назад"/>
        </StackPanel>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="lbTitles" Grid.Column="0" SelectionChanged="TitleChanged"/>
            <TextBlock x:Name="tbDescription" Grid.Column="1" TextWrapping="Wrap"/>
        </Grid>
    </DockPanel>
</Controls:MetroWindow>
